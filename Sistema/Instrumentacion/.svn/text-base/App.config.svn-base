<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <appender name="RollingLogAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="Logs\\RollingLog.log"/>
      <param name="AppendToFile" value="true"/>
      <param name="MaxSizeRollBackups" value="10"/>
      <param name="MaximumFileSize" value="1000000"/>
      <param name="RollingStyle" value="Size"/>
      <param name="StaticLogFileName" value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%date [%thread] %-5level %logger [%ndc] - %username - %type.%method line %line - %message%newline"/>
      </layout>
    </appender>
    <appender name="SmtpAppender" type="log4net.Appender.SmtpAppender,log4net">
      <to value="diego.zalles@gmail.com"/>
      <from value="info@guidemeonline.com"/>
      <authentication value="basic"/>
      <username value="info@guidemeonline.com"/>
      <password value="Nancy2006"/>
      <smtpHost value="mail.guidemeonline.com"/>
      <subject value="Log"/>
      <bufferSize value="512"/>
      <lossy value="true"/>
      <evaluator type="log4net.Core.LevelEvaluator,log4net">
        <threshold value="Error"/>
      </evaluator>
      <layout type="log4net.Layout.PatternLayout,log4net">
        <conversionPattern value="%property{log4net:HostName} :: %level :: %message %newlineLogger: %logger%newlineThread: %thread%newlineDate: %date%newlineNDC: %property{NDC}%newline%newline"/>
      </layout>
    </appender>
    <logger name="Todo">
      <!--<level value="All"/>-->
      <level value="Debug"/>
      <!--<level value="Info"/>-->
      <!--<level value="Warn"/>-->
      <!--<level value="Error"/>-->
      <!--<level value="Fatal"/>-->
      <!--<level value="Off"/>-->
      <appender-ref ref="RollingLogAppender"/>
    </logger>
    <logger name="Error">
      <level value="Error"/>
      <appender-ref ref="RollingLogAppender"/>
      <appender-ref ref="SmtpAppender"/>
    </logger>
  </log4net>
</configuration>